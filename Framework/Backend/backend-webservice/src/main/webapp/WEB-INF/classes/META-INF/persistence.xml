<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="NevSuite-Oracle-PU" transaction-type="RESOURCE_LOCAL">

        <description>NevSuite-PersistenceUnit</description>
        <jta-data-source>jdbc/edmdb-oracle</jta-data-source>

        <properties>
            <property name="eclipselink.jdbc.cache-statements" value="true"/>
            <property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
            <property name="eclipselink.jdbc.batch-writing.size" value="10000"/>
            <property name="eclipselink.persistence-context.flush-mode" value="commit"/>
            <property name="eclipselink.persistence-context.persist-on-commit" value="false"/>
            <property name="eclipselink.cache.shared.ValueStatusPair" value="false"/>
            <property name="eclipselink.logging.level" value="off"/>
        </properties>

    </persistence-unit>

    <persistence-unit name="NevSuite-H2-PU" transaction-type="RESOURCE_LOCAL">

        <description>NevSuite-PersistenceUnit</description>
        <jta-data-source>jdbc/edmdb-h2</jta-data-source>

    </persistence-unit>

</persistence>
