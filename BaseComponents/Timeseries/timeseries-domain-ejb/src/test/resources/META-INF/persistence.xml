<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="mock" transaction-type="RESOURCE_LOCAL">

        <class>net.naffets.nevsuite.backend.timeseries.domain.entity.TimeseriesHeadImpl</class>
        <class>net.naffets.nevsuite.backend.timeseries.domain.entity.RasterblockImpl</class>
        <class>net.naffets.nevsuite.domain.aggregate.PersistentValueStatusPair</class>

        <properties>

            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:h2db" />

            <!--<property name="hibernate.dialect" value="net.naffets.nevsuite.lang.dialect.H2DialectExtension" />-->
            <property name="hibernate.hbm2ddl.auto" value="create" />

        </properties>

    </persistence-unit>

</persistence>